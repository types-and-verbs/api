{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "types": ["src/types.d.ts"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/index.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
