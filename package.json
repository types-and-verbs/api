    "husky": "^6.0.0",
    "jest": "27.0.5",
    "mongodb-memory-server": "^6.9.6",
    "prettier": "^2.1.2",
    "sinon": "11.1.1",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "4.3.4"
