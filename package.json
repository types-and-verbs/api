    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-jwt": "6",
    "helmet": "4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "5.12.15",
    "pino": "6.11.3",
    "pino-pretty": "5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/escape-html": "^1.0.1",
    "@types/express": "^4.17.3",
