  "main": "./dist/index.js",
  "files": ["lib/**/*"],
  "scripts": {
    "build": "yarn lint && yarn test && rm -rf dist && tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev ./src/index.ts | yarn pino-pretty",
    "start:test": "ts-node-dev ./src/run.ts | yarn pino-pretty",
    "lint": "yarn eslint src/**/*.ts",
    "test": "jest --runInBand --ci",
